<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.activity.InstructionsActivity">

    <RelativeLayout
            android:id="@+id/rl_use_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary">

        <ImageView
                android:id="@+id/iv_back"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_left"
                android:contentDescription="图片" />

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="使用说明"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_use_title">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/iv_flowers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@mipmap/wechat_ali" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/iv_flowers"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:paddingTop="20dp"
                    android:text="1、用户注册专属账号，可上传用户名、密码和头像；\n2、软件介绍：查看软件开源信息和开发者；\n3、联系我们：跳转浏览器；\n4、我：修改资料、关于软件、联系我们、使用说明、更新版本、退出登录。"
                    android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
